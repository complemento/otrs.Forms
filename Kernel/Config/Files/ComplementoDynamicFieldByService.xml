<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="Frontend::Output::FilterElementPost###DynamicFieldByService" Required="0" Valid="1">
        <Description Translatable="1">Loader the module in the currents interfaces.</Description>
        <Group>LigeroServiceCatalog</Group>
        <SubGroup>OutputFilter</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::OutputFilterDynamicFieldByService</Item>
<!--                <Item Key="Debug">0</Item>-->
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AgentTicketPhone">1</Item>
			<Item Key="AgentTicketEmail">1</Item>
			<Item Key="CustomerTicketMessage">1</Item> 
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="AgentDynamicFieldByService::NameBeforeField" Required="1" Valid="1">
        <Description Translatable="1">Name of the field that action will occurs before  .</Description>
        <Group>LigeroServiceCatalog</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
		<String>fieldset div:last</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CustomerDynamicFieldByService::NameBeforeField" Required="1" Valid="1">
        <Description Translatable="1">In this field  is possible define where new field will be show .</Description>
        <Group>LigeroServiceCatalog</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
		<String>.RichTextHolder</String>
        </Setting>
    </ConfigItem>

    <ConfigItem Name="Frontend::Module###DynamicFieldByService" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>LigeroServiceCatalog</Group>
        <SubGroup>Frontend::Admin::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <Description>Admin</Description>
                <Title>Dynamic Field By Service</Title>
                <NavBarName>Admin</NavBarName>
                <NavBarModule>
                    <Module>Kernel::Output::HTML::NavBar::ModuleAdmin</Module>
                    <Name Translatable="1">Dynamic Fields by Service</Name>
                    <Description Translatable="1">Create your templates and manage them in this interface.</Description>
                    <Block>Ticket</Block>
                    <Prio>200</Prio>
                </NavBarModule>
		<Loader>
               		<CSS>Core.Agent.Admin.ProcessManagement.css</CSS>
		        <CSS>Core.AllocationList.css</CSS>
	                <JavaScript>Core.Agent.Admin.ComplementoDynamicFieldByService.js</JavaScript>
        	        <JavaScript>Core.UI.AllocationList.js</JavaScript>

		</Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>

    <ConfigItem Name="CustomerFrontend::Module###DynamicFieldByService" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the customer interface.</Description>
        <Group>LigeroServiceCatalog</Group>
        <SubGroup>Frontend::Customer::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <Description>Admin</Description>
                <Title>Article Template</Title>
                <NavBarName>Admin</NavBarName>
                <NavBarModule>
                    <Module>Kernel::Output::HTML::NavBar::ModuleAdmin</Module>
                    <Name Translatable="1">Customer Article Template</Name>
                    <Description Translatable="1">Create and manage Forms.</Description>
                    <Block>Ticket</Block>
                    <Prio>200</Prio>
                </NavBarModule>

            </FrontendModuleReg>
        </Setting>
    </ConfigItem>	
</otrs_config>
